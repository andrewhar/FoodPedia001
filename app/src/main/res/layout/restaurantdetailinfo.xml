<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingTop="20sp">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@mipmap/detailinfo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="餐廳資料"
            android:textColor="@color/icons"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="name"
        android:padding="10dp"
        android:id="@+id/detailname"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:id="@+id/detailimage"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:gravity="top"
                android:src="@mipmap/type"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:gravity="top"
                android:src="@mipmap/goodmark"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:gravity="top"
                android:src="@mipmap/cheap"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:gravity="top"
                android:src="@mipmap/location"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="top"
            android:text="種類:  "
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="top"
            android:text="評分:  "
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="top"
            android:text="價錢:  "
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="top"
            android:text="地點:  "
            android:textSize="18dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="top"
                android:textSize="18dp"
                android:id="@+id/detailtype"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="top"
                android:textSize="18dp"
                android:id="@+id/detailscore"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="top"
                android:textSize="18dp"
                android:id="@+id/detailprice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="top"
                android:textSize="18dp"
                android:id="@+id/detaillocation"/>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/buttongooglemapsearch"
        android:layout_marginBottom="15dp"
        android:textSize="18dp"
        android:text="以google map搜尋路線"/>







</LinearLayout>